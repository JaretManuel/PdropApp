<h1>Listing submissions</h1>

<div id="list_submissions">
	<ul>
		<% @submissions.each do |submission| %> 
		<%= current_user.username %>*
		<%= submission.user.username %>
			<% if current_user.present? && ( (session[:goals].nil?) || (!session[:goals].nil? && !session[:goals].include?(submission.id.to_s))) && current_user.id != submission.user.id %>
		    	<%= link_to image_tag("goal_arrow.png"), "/submissions/#{submission.id}/goal", :title => "Goal!", :id => dom_id(submission) %>
		    <% elsif current_user.nil? %>
				<%= link_to image_tag("goal_arrow.png"), "/submissions/#{submission.id}/goal", :title => "Goal!", :id => dom_id(submission) %>
			<% else %>
			<% end %>
			<h3><%= link_to submission.title, submission.link, :target => '_blank' %></h3>
		    <%= submission.goals %> <%= submission.goals != 1 ? 'Goals' : "Goal" %> by <%= submission.user.username %> || <%= submission.flag %>
			<br/><%= link_to 'Show', submission %> || <%= link_to 'Edit', edit_submission_path(submission) %> || <%= link_to 'Destroy', submission, confirm: 'Are you sure?', method: :delete %>
			<hr/>
		<% end %>
	</ul>
</div>
<hr/>
<hr/>

<table border=1>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Text</th>
    <th>Goals</th>
    <th>Flag</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @submissions.each do |submission| %>
  <tr>
    <td><%= submission.user_id %></td>
    <td><%= link_to submission.title, submission.link %></td>
    <td><%= submission.text %></td>
    <td><%= submission.goals %></td>
    <td><%= submission.flag %></td>
    <td><%= link_to 'Show', submission %></td>
    <td><%= link_to 'Edit', edit_submission_path(submission) %></td>
    <td><%= link_to 'Destroy', submission, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Submission', new_submission_path %>
