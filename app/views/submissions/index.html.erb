<h1>Listing submissions</h1>

<div id="list_submissions">
	<ul>
		<% @submissions.each do |submission| %>
		    <li><h3><%= link_to submission.title, submission.link, :target => '_blank' %></h3>
		    	<strong>Description:</strong> <%= submission.text %><br/>
		    <%= submission.goals %> || <%= submission.flag %> || <%= link_to 'Show', submission %> || 
			<%= link_to 'Edit', edit_submission_path(submission) %> || <%= link_to 'Destroy', submission, confirm: 'Are you sure?', method: :delete %></li>
		<% end %>
	</ul>
</div>
<hr/>
<hr/>

<table border=1>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Text</th>
    <th>Goals</th>
    <th>Flag</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @submissions.each do |submission| %>
  <tr>
    <td><%= submission.user_id %></td>
    <td><%= link_to submission.title, submission.link %></td>
    <td><%= submission.text %></td>
    <td><%= submission.goals %></td>
    <td><%= submission.flag %></td>
    <td><%= link_to 'Show', submission %></td>
    <td><%= link_to 'Edit', edit_submission_path(submission) %></td>
    <td><%= link_to 'Destroy', submission, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Submission', new_submission_path %>
